@typeparam Titem
<h3>GenericList</h3>

@if (MyList is null)
{
    @if (Loading is null)
    {
        <div class="align-items-center">

            <img src="https://upload.wikimedia.org/wikipedia/commons/c/c7/Loading_2.gif" />
        </div>
    }
    else
    {
        @Loading
    }
}
else
{
    @if (MyList.Count == 0)
    {
        @if(NoRecords is null)
        {
            <div class="align-items-center">
                <p>No hay registros para mostrar </p>
            </div>
        }
        else
        {
            @NoRecords
        }
    }
    else
    {
        @Body
    }
}


@code {

    [Parameter]
    public RenderFragment? Loading { get; set; }

    [Parameter]
    public RenderFragment? NoRecords { get; set; }

    //Parametros obligatorios
    [Parameter]
    [EditorRequired]
    public RenderFragment Body { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public List<Titem> MyList { get; set; } = null!;

    

}
